    <script>
        document.addEventListener('DOMContentLoaded', () => {
            try {
                // Get the current URL of the embedding page (parent page)
                const parentUrl = window.top.location.href;
                const projectId = new URL(parentUrl).hash.substring(1); // Extract hash after '#'

                const iframe = document.querySelector('.embed-frame');
                if (projectId) {
                    iframe.src = `https://scratch.mit.edu/projects/${projectId}/embed/`;
                } else {
                    iframe.src = "https://scratch.mit.edu/projects/1051154324/embed/"; // Default project
                }
            } catch (error) {
                console.error('Error accessing parent URL:', error);
            }
        });
    </script>
